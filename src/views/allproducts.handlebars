<div class="container-prod">
    {{> nav user=user admin=admin btnInicio=btnInicio}}

    <div class="body-all-products">


        <div class="div-input-search-code" id="inputCodeProducts">
            <form>
                <input type="text" id="inputSearchCode">
                <button onclick="searchProdCode(event)">Buscar</button>
            </form>
        </div>

        <div id="divResultsProds">
        </div>

        <div id="divAllProducts">
            <table class="table-products">
                <thead>
                    <tr>
                        <th>CÃ³digo</th>
                        <th>Nombre</th>
                        {{#if admin}}
                        <th>Precio x Unidad Costo</th>
                        {{/if}}
                        <th>Precio x Unidad Venta</th>
                        <th>Stock en tienda</th>
                        <th>Stock Total</th>
                        {{#if admin}}
                        <th>Total invertido</th>
                        <th>Total a vender</th>
                        {{/if}}
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.code}}</td>
                        <td>{{this.title}}</td>
                        {{#if ../admin}}
                        <td>$ {{this.costPrice}}</td>
                        {{/if}}
                        <td>$ {{this.sellingPrice}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.totalStock}}</td>
                        {{#if ../admin}}
                        <td>$ {{this.moneyInvested}}</td>
                        <td>{{this.productsToSell}}</td>
                        {{/if}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/crudprods.js"></script>