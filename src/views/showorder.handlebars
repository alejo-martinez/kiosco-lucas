<div class="container-home div">
    {{> nav user=user admin=admin btnInicio=btnInicio}}
    <div class="div-btn-back">
        <a href="/orders"><i class="fa-solid fa-arrow-left-long"></i></a>
    </div>
    <div class="div-order">
        <h2>Orden: {{ticket._id}}</h2>
        <span>Emitida el d√≠a: {{ticket.created_at}}</span>
        <span>Vendedor: {{ticket.seller.name}}</span>
        <h4>Productos:</h4>
        {{#each ticket.products}}

        <div class="div-prods">
            <span>Producto: {{this.product.title}}</span>
            {{#if ../admin}}
            <span>Precio de costo unitario: ${{this.product.costPrice}}</span>
            {{/if}}
            <span>Precio de venta unitario: ${{this.product.sellingPrice}}</span>
            <span>Cantidad comprada: {{this.quantity}}</span>
            <span>Monto total del producto: ${{this.totalPrice}}</span>
        </div>
        {{/each}}
        <span>Medio de pago: {{ticket.payment_method}}</span>
        <span class="span-amount">Monto total: ${{ticket.amount}}</span>
    </div>
</div>