<div class="container-home">
    {{> nav user=user admin=admin}}
    <div class="container-update">

        <h3>Resúmenes {{category}}</h3>
        {{#if summaries}}
    {{> pagination hasNextPage=hasNextPage hasPrevPage=hasPrevPage nextPage=nextPage prevPage=prevPage page=page }}
    <div>

    {{#each summaries}}
        <div class="div-prods-update">
            <a href="/show/summary/{{this._id}}" class="each-month">Resumen del {{#if this.month}} mes: {{this.month}} {{else}} día: {{this.date}} {{/if}}</a>
            
        </div>
    {{/each}}
        {{else}}
        <span>Todavía no se han generado resúmenes</span>
        {{/if}}
    </div>
    </div>
</div>